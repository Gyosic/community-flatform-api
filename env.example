# Database
DATABASE_URL="postgresql://{username}:{password}@localhost:5432/community"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_USER="{username}"
DATABASE_PASSWORD="{password}"
DATABASE_NAME="community"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Application
NODE_ENV=development
PORT=4000

# Session & Auth
SYSADMIN_EMAIL="{email}"
SYSADMIN_NAME="시스템관리자"
SYSADMIN_PASSWORD="{password}"
AUTH_SECRET='{secret}'
AUTH_GOOGLE_ID="{google_client_id}"
AUTH_GOOGLE_SECRET="{google_client_secret}"
AUTH_NAVER_ID="{naver_client_id}"
AUTH_NAVER_SECRET="{naver_client_secret}"

# File Upload
MAX_FILE_SIZE=10485760
FILE_STORAGE_ROOT="/tmp/community"
ALLOWED_FILE_TYPES=image/*,application/pdf

# Email (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER={your_gmail}@gmail.com
SMTP_PASSWORD={gmail_app_password}
SMTP_FROM="카페서비스 <{your_gmail}@gmail.com>"
EMAIL_VERIFY_TTL=86400
REDIRECT_URL={verified_redirect_url}

# AI Features (Optional)
OPENAI_API_KEY=
AI_ENABLED=false

# Monitoring (Optional)
SENTRY_DSN=
